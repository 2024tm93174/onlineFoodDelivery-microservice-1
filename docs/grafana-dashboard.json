{
  "title": "FoodGo Microservices \u2014 Golden Signals",
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP RPS",
      "targets": [
        {
          "expr": "sum(rate(order_service_http_requests_total[1m])) by (path)"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP Errors",
      "targets": [
        {
          "expr": "sum(rate(order_service_http_requests_total{{status!~\"2..\"}}[1m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency (p50/p90/p99)",
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(order_service_http_request_latency_seconds_bucket[5m])) by (le, path))"
        },
        {
          "expr": "histogram_quantile(0.9, sum(rate(order_service_http_request_latency_seconds_bucket[5m])) by (le, path))"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(order_service_http_request_latency_seconds_bucket[5m])) by (le, path))"
        }
      ]
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}
